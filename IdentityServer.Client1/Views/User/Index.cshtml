@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "Index";
}



<a class="btn btn-danger" asp-action="Logout">Çıkış Yap</a>
<a class="btn btn-success" asp-action="GetRefreshToken">Refresh Token Yenile</a>

<h1>Only Users</h1>

<h4>Claim Verileri</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ClaimType</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>

<h4>Authentication Verileri</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Auth Property Key</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>
